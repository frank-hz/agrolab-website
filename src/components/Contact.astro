<style>
    .section__contact {
        min-height: 100vh;
        padding: 2.5rem 0;        
        display: flex;
        flex-direction: column;
        align-items: center;        
    }
    .contact__grid {
        margin-top: 5rem;
        max-width: var(--max-width);
        display: grid;
        gap: 0 1rem;
        grid-template-columns: repeat(2, 1fr);
        justify-content: space-between;
    }
    .contact__info {
        display: flex;
        padding: 1rem .5rem;
        flex-direction: column;
    }
    .info__title {
        margin-bottom: 2rem;
        font-size: 1rem;
    }
    .info__title span {
        font-weight: 600;
    }
    .info__list {
        list-style: none;
        display: flex;
        flex-direction: column;
        padding-top: 1rem;
        gap: 2rem;
    }
    .info__list li {
        display: inline-flex;
        align-items: center;
        font-size: 1.1rem;
        line-height: 1.5rem;
    }
    .info__list li i {
        margin-right: .6rem;
        font-size: 1.5rem;
        color: var(--primary-color-dark);
    }

    .contact__image {
        display: flex;
        justify-content: center;
        background: var(--primary-color);
        /* background: #195eff; */
        width: 480px;
        height: 460px;
        position: relative;
        border-radius: 3px;
    }
    .contact__image img {
        height: 520px;
        width: auto;
        position: absolute;
        bottom: 0;
        left: 0;
        transform: translateX(20%);
    }
</style>