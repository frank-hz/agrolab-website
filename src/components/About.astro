                </li>
            </ul>
        </div>
    </div>

</section>
<style>
    .about__container {
        min-height: 100vh;
    }
    .about__content {
        padding: 1rem 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 2rem;
    }
    .about__title {
        color: var(--text-dark);
        font-size: 1.7rem;
        line-height: 1.7rem;
        letter-spacing: .2px;
        font-weight: 800;        
    }
    .about__subtitle {
        display: block;
        font-size: 1rem;
        color: var(--text-gray);
    }
    .about__grid {
        display: grid;
        width: 100%;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }
    .step__card {
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: .5rem;
    }
    .step__title {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--text-dark);
    }
    .step__text {
        color: var(--text-gray);
        font-size: 1rem;
    }
    .step__card img {
        width: 140px;
        height: 140px;
    }
    .aspects {
        margin: 0 2rem;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
        align-items: center;        
        place-content: center;
    }
    .aspects__image {
        display: flex;
        align-items: center;
        justify-content: center;
        /* border:1px solid red; */
    }
    .aspects__image img {
        max-width: 500px;
        height: auto;
    }
    .aspects__content {
        max-width: 480px;
    }
    .aspects_menu {
        list-style: none;
        margin: 1rem 0;
        display: flex;
        flex-direction: column;
        gap: 1rem 0;
    }
    .aspects_menu li {
        display: block;
        font-size: 1rem;
        line-height: 1.50rem;
        color: var(--text-gray);
    }
    .aspects_menu li span {
        width: 22px;
        height: 22px;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        background: var(--primary-color-dark);
        background: #195eff;
        border-radius: 5px;
    }
    .aspects_menu li span i {
        color: #fff;
    }

    @media (max-width: 768px) {
        .about__title {
            text-align: center;
        }
        .about__subtitle {
            text-align: center;
        }
        .about__grid {
            grid-template-columns: repeat(1, 1fr);
        }
        .step__card {
            padding: 0 1rem;
        }
        .step__title {
            text-align: center;
        }
        .step__text {
            text-align: center;
        }
        .aspects {
            grid-template-columns: repeat(1, 1fr);
        }
    }

    /* @media only screen and (max-width: 600px) {} */
</style>