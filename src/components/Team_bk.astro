<style>
    .team__container {
        min-height: 100vh;
        position: relative;    
        padding: 2.5rem 0 .5rem 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
    }
    .team__container::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0%;
        transform: translateY(80%);
        height: 40%;
        width: 100%;
        display: flex;
        align-items: center;
        z-index: -2;
        background: url('../assets/images/team-cover.jpg');
        background-position: center;
    }
    .team__container::after {
        content: '';
        position: absolute;
        left: 0;
        top: 0%;
        transform: translateY(80%);
        height: 40%;
        width: 100%;
        display: flex;
        align-items: center;
        z-index: -1;
        opacity: .4;
        background: var(--optional);
    }

    .team__grid {
        max-width: var(--max-width);
        z-index: 1;
        width: 100%;
        display: grid;
        margin-top: 2rem;
        grid-template-columns: repeat(4, 1fr);
        gap: 0 .4rem;
    }
    .member__card {
        background: #fff;
        border-radius: 10px;
        height: 380px;
        max-height: 380px;
        /* max-width: 420px; */
        width: 300px;
        box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px, rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;

    }
    .member__header {
        display: flex;
        align-items: center;
        align-items: flex-end;
        justify-content: center;
        height: 50%;
    }
    .member__image {
        height: 152px;
        width: 152px;
        padding: 6px;
        border-radius: 50%;
        display: inline-block;
        background: #fff;
        border: 1px dashed var(--primary-color);
    }    
    .member__image img {
        height: 100%;
        width: 100%;
        border-radius: 50%;
    }
    .member__content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: .8rem 0;
        justify-content: center;
        height: 50%;
    }
    .member__content h3 {
        font-size: 1.3rem;
        font-weight: 800;
        line-height: 1.5rem;
        text-align: center;
        color: var(--text-dark);
    }
    .member__content .member__rol {
        font-size: .9rem;
        line-height: 0.75rem;
        color: var(--text-gray);
        font-weight: 500;
        text-align: center;
    }
    .member__content .member__phone {
        display: inline-flex;
        align-items: center;
        font-size: 1rem;
        color: var(--text-dark);
    }
    .member__content .member__phone i,
    .member__content .member__phone span {

    }
    .member__link {
        font-size: .95rem;
        font-weight: 600;
        color: var(--text-dark);
        transition: .1s;
    }
    .member__link:hover {
        color: var(--primary-color-dark);
    }
    @media (width < 1200px) {
        .team__grid {
            /* grid-template-columns: repeat(2, 1fr); */
            /* gap: 1rem; */
        }
    }
</style>