---
import '../assets/fonts/Poppins/poppins.css';
import '../assets/fonts/RemixIcon v4.1.0/fonts/remixicon.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agrolab - Web</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body>
    <slot />
</body>
</html>
<style is:global>
    :root {
        --primary-color: #52c450;
        --primary-color-dark: #3fb83d;
        --secondary-color: #f0f4f3;
        --optional: #004439;

        --text-light: #a2adbe;
        --text-dark: #071222;
        /* --text-gray: #647290; */
        --text-gray: #545f78;
        --extra-light: #fff;
        --medium-light: #e5e9f0;
        --max-width: 1200px;

    }
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
    html {
        scroll-behavior: smooth;
    }
    body {
        font-family: 'Poppins', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        /* background-image: linear-gradient(to bottom, #c2f9ff, #d5f9ff, #e9f9ff, #f8fbff, #ffffff); */
        background-image: linear-gradient(to bottom, #d6fbff, #e3fbff, #f0fbff, #fafcff, #ffffff);
    }
    a {
        text-decoration: none;
    }
    img {
        width: 100%;
        display: block;
    }
    .btn {
        outline: none;
        border: none;
        padding: .7rem 2rem;
        font-size: .95rem;
        font-weight: 500;
        color: var(--text-dark);
        background: var(--extra-light);
        border-radius: .4rem;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        transition: .3s;
    }
    .btn i,
    .btn span {
        margin: 0 2px;
    }
    .btn:hover {
        background: var(--medium-light);
    }
    .btn-primary {
        background: var(--primary-color);
        color: var(--extra-light);
    }
    .btn-primary:hover {
        background: var(--primary-color-dark);
    }

    .section__container {
        max-width: var(--max-width);
        margin: auto;
        padding: 3rem 1rem;
    }
    .section__title {
        font-size: 1.9rem;
        line-height: 1.9rem;
        font-weight: 800;
        color: var(--text-dark);
    }
    .section__subtitle {
        font-size: 1rem;
        line-height: 1rem;
        color: var(--text-dark);
    }
    .text-primary {
        color: var(--primary-color);
    }
    .text-white {
        color: #fff;
    }
    .text-optional {
        color: var(--optional);
    }
    .text-center {
        text-align: center;
    }
    .d-block {
        display: block;
    }
</style>